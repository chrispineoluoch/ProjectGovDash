@page
@model ExternalLoginModel

@{
    ViewData["Title"] = "Register";
}

<div class="card signin-card shadow bg-white rounded pe-2 ps-2">
    <div class="card-body signin-card-body">
        <h5 id="external-login-title" class="signin-card-title text-warm_light fs-2 fw-bold">
            @Model.ProviderDisplayName Account.
        </h5>
        <h6><span class="badge bg-warm mt-2">Email confirmation.</span></h6>

        <p id="external-login-description" class="mt-3 card-paragraph">
            We respect your privacy. By clicking to verify your
            @if (Model.ProviderDisplayName == "Google")
            {
                <text>Google Account,</text>
            }
            else if (Model.ProviderDisplayName == "Microsoft")
            {
                <text>Microsoft Account,</text>
            }
            you agree to the <a asp-area="" asp-controller="Home" asp-action="TermsOfUse" target="_blank">Terms of Use</a>
            and <a asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">Privacy Policy</a>.
        </p>

        <div>
            <section>
                <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="signin-textbox-group">
                            <input asp-for="Input.Email" class="form-control signin-textboxes" autocomplete="email" placeholder="" aria-required="true" readonly />
                            <span asp-validation-for="Input.Email" class="text-danger signin-validation-text"></span>
                        </div>

                        <div class="pb-4">
                            <button type="submit" class="btn btn-warm btn-lg signin-button">Accept</button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}