@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<header>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <div class="card account-card shadow rounded p-3 border-0">
                    <h5 class="account-card-title text-warm_light">
                        Sign out
                    </h5>
                    <button type="submit" class="nav-link btn btn-link btn-lg signin-button">Click here to sign out</button>
                </div>
            </form>
        }
        else
        {
            <div class="card account-card shadow rounded p-3 border-0">
                <h5 class="account-card-title text-warm_light">
                    Sign out
                </h5>
                <h6 class="fw-normal">
                    You have successfully signed out from the application.
                </h6>
            </div>
        }
    }
</header>
