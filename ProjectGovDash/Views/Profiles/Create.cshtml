@model ProjectGovDash.Models.UserAccounts.Profile

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card Page-input-card mb-4 shadow">
            <div class="card-body">
                <h5 class="signin-card-title text-warm fs-5 fw-normal justify-content-start d-grid mb-4">
                    My personal details
                </h5>

                <div class="justify-content-center">
                    <div class="row g-4 pb-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3">
                                <input asp-for="FirstName" id="FirstName" class="form-control Page-input-box myinput-text" />
                                <label for="FirstName">My first name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="LastName" id="LastName" class="form-control Page-input-box myinput-text" />
                                <label for="LastName">My last name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="DateofBirth" id="DateofBirth" class="form-control Page-input-box myinput-text mydatepicker" type="date" />
                                <label for="DateofBirth">My date of birth</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="Gender" id="Gender" class="form-control Page-input-box myinput-text" aria-label="Default select example">
                                    <option selected>Select a gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                </select>
                                <label for="Gender">My gender identity</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="IDNumber" id="IDNumber" class="form-control Page-input-box myinput-text" />
                                <label for="IDNumber">My national identity number</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="PhoneNumber" id="PhoneNumber" class="form-control Page-input-box myinput-text" />
                                <label for="PhoneNumber">My phone number</label>
                            </div>

                            <div class="text-center mb-3">
                                <input name="SubmitProfile" type="submit" value="Finish" class="btn btn-warm btn-lg rounded-pill Page-button-transform" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/datepicker.js"></script>

}
