@using ProjectGovDash.ModelViews
@model CompleteProfileViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <div class="row">
        <div class="col">
            @foreach (var item in Model.profilelist)
            {
                <div class="card Page-input-card mb-4 shadow bg-light">
                    <div class="card-body">

                        <h5 class="text-warm_light fs-5 fw-normal mb-4">
                            My profile details.
                        </h5>
                        <h3 class="fw-normal fs-5" style="font-weight:500;">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName) </h3>
                        <div class="mt-3">
                            <p class="card-text mb-1">Gender: @Html.DisplayFor(modelItem => item.Gender)</p>
                            <p class="card-text">My date of birth: @Html.DisplayFor(modelItem => item.DateofBirth)</p>
                        </div>

                        <div class="mt-3">
                            <a href="@Url.Action("Edit", "Profiles", new { id = item.Id })" class="btn btn-warm rounded-pill d-inline-block me-12 mb-1">Edit details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
