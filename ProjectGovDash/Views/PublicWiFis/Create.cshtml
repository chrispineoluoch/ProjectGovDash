@model ProjectGovDash.Models.PublicWiFi.PublicWiFi

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col">
        <div class="card Page-input-card mb-4 shadow">
            <div class="card-body">
                <h5 class="signin-card-title text-warm fs-5 fw-normal justify-content-start d-grid mb-4">
                    Public WiFi Site Details
                </h5>

                <div class="justify-content-center">
                    <div class="row g-4 pb-3">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-floating mb-3">
                                <select asp-for="Region" id="Region" class="form-control Page-input-box myinput-text">
                                </select>
                                <label for="Region">The region name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="County" id="County" class="form-control Page-input-box myinput-text">
                                </select>
                                <label for="County">The county name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="SubCounty" id="SubCounty" class="form-control Page-input-box myinput-text">
                                </select>
                                <label for="SubCounty">The subcounty name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="Constituency" id="Constituency" class="form-control Page-input-box myinput-text">
                                </select>
                                <label for="Constituency">The constituency name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <select asp-for="Ward" id="Ward" class="form-control Page-input-box myinput-text">
                                </select>
                                <label for="Ward">The ward name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="SiteName" id="floatingInputValue" class="form-control Page-input-box myinput-text" />
                                <label for="floatingInputValue">The site name</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="Coordinates" id="Coordinates" class="form-control Page-input-box myinput-text" />
                                <label for="Coordinates">The site coordinates</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="AccessPoints" id="AccessPoints" class="form-control Page-input-box myinput-text" />
                                <label for="AccessPoints">The number of access points</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="DateofInstallation" id="DateofInstallation" class="form-control Page-input-box myinput-text mydatepicker" type="date" />
                                <label for="DateofInstallation">The date of installation</label>
                            </div>

                            <div class="form-floating mb-3">
                                <input asp-for="SiteStatus" id="SiteStatus" class="form-control Page-input-box myinput-text" />
                                <label for="SiteStatus">The status of the site</label>
                            </div>

                            <div class="text-center mb-3">
                                <input name="SubmitProfile" type="submit" value="Finish" class="btn btn-warm btn-lg rounded-pill Page-button-transform" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/datepicker.js"></script>
    <script src="~/js/boundaries.js"></script>

}
